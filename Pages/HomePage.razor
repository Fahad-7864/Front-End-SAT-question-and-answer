@page "/"
@inject NavigationManager NavigationManager

<PageTitle>SAT Exam Practice</PageTitle>

<div class="text-center">
    <h1>Welcome to the SAT Exam Practice App!</h1>
    <p>Get ready to enhance your skills with our practice questions.</p>

    <div>
        Are you a student or a teacher?
        <select @onchange="OnRoleSelected">
            <option value="">Select Role...</option>
            <option value="Student">Student</option>
            <option value="Teacher">Teacher</option>
        </select>
    </div>
</div>

@code {
    private void OnRoleSelected(ChangeEventArgs e)
    {
        var selectedRole = e.Value.ToString();
        if (selectedRole == "Teacher")
        {
            NavigationManager.NavigateTo("/teacher-home");
        }
        else if (selectedRole == "Student")
        {
            NavigationManager.NavigateTo("/student-home");
        }
    }
}

